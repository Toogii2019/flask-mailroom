{% extends 'base.jinja2' %}

{% block subtitle %}Add Donation{% endblock subtitle %}
{% block content %}
<form method="POST">
    {% if error %}<span class="error"> {{error}} </span><br>{% endif %}
    {% if msg %}<span class="msg"> {{msg}} </span><br>{% endif %}
    <label for="name">Donor Name: </label><input type="text" id="name" name="name"><br>
    <label for="donation">Donation Amount: </label><input type="integer" id="donation" name="donation"><br>
    <input type="submit" value="Add donation">
</form>
{% endblock content %}